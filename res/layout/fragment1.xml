<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ff1d222a"
    >
    <LinearLayout
            android:id="@+id/Linearlayout_top"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:layout_centerHorizontal="true" 
            android:layout_marginLeft="10dip"  
            android:layout_marginTop="20dip"
        >
       <ImageView
            android:id="@+id/img_battery"
           	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:contentDescription="@string/app_name"
            />
       <ListView 
		    android:id="@+id/battery_listview"
		    android:layout_marginLeft="40dip"
		    android:layout_marginRight="30dip"
		    android:layout_marginTop="40dip"
		    android:divider="#00000000"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    />  
    </LinearLayout>
   
    <LinearLayout
            android:id="@+id/Linearlayout1"
            android:layout_below="@id/Linearlayout_top"
            android:gravity="center"
            android:layout_marginTop="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"  >
	        <ImageButton
	            android:id="@+id/wifi"
	            android:background="#00000000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/battery_tab"
	            android:src="@drawable/one_wifi_close"
	            android:contentDescription="@string/app_name"
                /> 
	        <ImageButton
	            android:id="@+id/mobiledata"
	            android:background="#00000000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/battery_tab"
	            android:src="@drawable/one_mobiledata_close"
	            android:contentDescription="@string/app_name"
                /> 
	       <ImageButton
	            android:id="@+id/gps"
	            android:background="#00000000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/battery_tab"
	            android:src="@drawable/one_gps_close"
	            android:contentDescription="@string/app_name"
	            />
	        <ImageButton
	            android:id="@+id/bluetooth"
	            android:background="#00000000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/battery_tab"
	            android:src="@drawable/one_bluetooth_close"
	            android:contentDescription="@string/app_name"
	            />
	        <ImageButton
	            android:id="@+id/bright"
	            android:background="#00000000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/battery_tab"
	            android:src="@drawable/one_bright"
	            android:contentDescription="@string/app_name"
	            /> 
	       <ImageButton
	            android:id="@+id/ringmodel"
	            android:background="#00000000"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/battery_tab"
	            android:src="@drawable/one_silence"
	            android:contentDescription="@string/app_name"
	            />
     </LinearLayout>
    
</RelativeLayout>